// Standard HTML elements

.cs-sc-label
  color $col-gray-400
  font-size 13px
  font-weight bold

.cs-sc-input-text
  height 35px
  box-sizing border-box
  margin 0
  padding 0

  border none
  border-bottom solid 1px $col-blue-500
  border-radius 0

  font-size 16px
  color $col-gray-500

  &:focus
    border-color $col-blue-700

  &::-webkit-input-placeholder
    color $col-gray-200
    font-style italic
    font-weight normal

.cs-sc-button
  min-height 48px
  font-size 22px
  font-weight bold
  primary-cta()